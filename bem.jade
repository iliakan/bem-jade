//- Some global variables
- var bem_chain = [];
- var bem_chain_contexts = ['block'];

//- Block
mixin b(tag, isElement)
  - bem.call(this, buf, bem_chain, bem_chain_contexts, tag, isElement)

//- Element
mixin e(tag)
  +b(tag, true)&attributes(attributes): block
